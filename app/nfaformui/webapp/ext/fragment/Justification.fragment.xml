<core:FragmentDefinition xmlns:commons="sap.suite.ui.commons" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox4" core:require="{ handler: 'nfaformui/ext/fragment/Justification'}">
	 <Dialog id="_IDGenDialog"
        title="Justification"
		draggable="true"
		resizable="true"
        contentWidth="500px"
		>
		<commons:Timeline 
			id="idTimeline"
			enableDoubleSided="true"
			growingThreshold="0"
			sortOldestFirst="true"
			content="{path: 'NfaDetailsToNfaCommentsHistory'}">
		<commons:content>
			<commons:TimelineItem 
					id="idTemplateItem"
					dateTime="{createdAt}"
					text="{Comments}"
					userName="{createdBy}">
			</commons:TimelineItem >
		</commons:content>
	</commons:Timeline >
	 <endButton>
        <Button id="_IDGenButton1" text="Close" press="handler.onCloseJustification"/>
    </endButton>
    </Dialog></VBox>
</core:FragmentDefinition>