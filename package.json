{
  "name": "NfaApplication",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.1.1",
    "@sap-cloud-sdk/resilience": "^4.1.1",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-nfaformui": "cds watch --open nfaformui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy NfaApplication --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-nfaapproval": "cds watch --open nfaapproval/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "destinations": true,
      "NfaBpaDest": {
        "kind": "odata",
        "credentials": {
          "destination": "NfaBpaDest"
        }
      },
      "NfaBpaDestLev": {
        "kind": "odata",
        "credentials": {
          "destination": "NfaBpaDestLev"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/nfaformui",
    "app/nfaapproval"
  ]
}
